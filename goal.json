        "domainKey": "corecs"
      },
      {
        "name": "DevOps / Cloud / Engineering",
        "path": "/devops",
        "domainKey": "devops"
      },
      {
        "name": "Advanced Engineering & Systems",
        "path": "/advanced",
        "domainKey": "advanced"
      }
    ],
    "about": {
      "path": "/about",
      "contentBlocks": [
        "mission",
        "roadmap",
        "contributing",
        "contact"
      ]
    },
    "comingSoon": {
      "path": "/coming-soon",
      "dynamicTopicSupport": true
    }
  },
  "components": {
    "Navbar": [
      "navLinks",
      "themeToggle"
    ],
    "Footer": [
      "copyright",
      "githubLink"
    ],
    "DomainCard": [
      "title",
      "description",
      "link"
    ],
    "TopicCard": [
      "name",
      "domain",
      "statusBadge",
      "onClick"
    ],
    "SearchBar": [
      "query",
      "onChange"
    ],
    "ThemeToggle": [
      "lightMode",
      "darkMode"
    ]
  },
  "dataModel": {
    "topicObject": {
      "id": "number",
      "name": "string",
      "domain": "fullstack | dsa | web3 | ai | corecs | devops | advanced",
      "shortDescription": "string",
      "status": "coming-soon"
    }
  },
  "globalFeatures": {
    "search": true,
    "filterByDomain": true,
    "responsiveDesign": true,
    "keyboardNavigation": true,
    "ariaLabels": true,
    "animations": "subtle"
  },
