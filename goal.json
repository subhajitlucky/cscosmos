{
  "projectName": "CSCosmos",
  "description": "A central hub website that links to 126 upcoming Computer Science microsites. Each topic appears as a placeholder card with a 'Coming Soon' badge. The website is built using React + Vite + TailwindCSS/shadcn, includes light/dark theme, routing, search, and seven domain pages.",
  "techStack": {
    "framework": "React",
    "bundler": "Vite",
    "styling": "TailwindCSS with optional shadcn/ui components",
    "routing": "react-router-dom",
    "theme": {
      "supportsDarkMode": true,
      "persistInLocalStorage": true
    }
  },
  "pages": {
    "home": {
      "path": "/",
      "sections": [
        "hero",
        "domainGrid",
        "searchBar",
        "featuredTopics"
