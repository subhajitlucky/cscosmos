{
    "projectName": "CSCosmos",
    "description": "A central hub website that links to 126 upcoming Computer Science microsites. Each topic appears as a placeholder card with a 'Coming Soon' badge. The website is built using React + Vite + TailwindCSS/shadcn, includes light/dark theme, routing, search, and seven domain pages.",
    "techStack": {
      "framework": "React",
      "bundler": "Vite",
      "styling": "TailwindCSS with optional shadcn/ui components",
      "routing": "react-router-dom",
      "theme": {
        "supportsDarkMode": true,
        "persistInLocalStorage": true
      }
    },
    "pages": {
      "home": {
        "path": "/",
        "sections": ["hero", "domainGrid", "searchBar", "featuredTopics"],
        "hero": {
          "title": "CSCosmos — Explore the Entire Universe of Computer Science",
          "subtitle": "A hub of 126 interactive visual learning microsites across Full-Stack, DSA, Web3, AI, Core CS, DevOps, and Advanced Engineering.",
          "primaryButton": "Explore Topics",
          "secondaryButton": "About CSCosmos"
        }
      },
      "domains": [
        { "name": "Full Stack Development", "path": "/fullstack", "domainKey": "fullstack" },
        { "name": "Data Structures & Algorithms", "path": "/dsa", "domainKey": "dsa" },
        { "name": "Web3 & Blockchain", "path": "/web3", "domainKey": "web3" },
        { "name": "Artificial Intelligence", "path": "/ai", "domainKey": "ai" },
        { "name": "Core Computer Science", "path": "/corecs", "domainKey": "corecs" },
        { "name": "DevOps / Cloud / Engineering", "path": "/devops", "domainKey": "devops" },
        { "name": "Advanced Engineering & Systems", "path": "/advanced", "domainKey": "advanced" }
      ],
      "about": {
        "path": "/about",
        "contentBlocks": ["mission", "roadmap", "contributing", "contact"]
      },
      "comingSoon": {
        "path": "/coming-soon",
        "dynamicTopicSupport": true
      }
    },
    "components": {
      "Navbar": ["navLinks", "themeToggle"],
      "Footer": ["copyright", "githubLink"],
      "DomainCard": ["title", "description", "link"],
      "TopicCard": ["name", "domain", "statusBadge", "onClick"],
      "SearchBar": ["query", "onChange"],
      "ThemeToggle": ["lightMode", "darkMode"]
    },
    "dataModel": {
      "topicObject": {
        "id": "number",
        "name": "string",
        "domain": "fullstack | dsa | web3 | ai | corecs | devops | advanced",
        "shortDescription": "string",
        "status": "coming-soon"
      }
    },
    "globalFeatures": {
      "search": true,
      "filterByDomain": true,
      "responsiveDesign": true,
      "keyboardNavigation": true,
      "ariaLabels": true,
      "animations": "subtle"
    },
